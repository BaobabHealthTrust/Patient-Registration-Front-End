
<table class="listing" summary="Subject list">
  <tr class="header">
    <th></th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Gender</th>
    <th>D.O.B</th>
  </tr>

  <% @patient.each do |x| %>
  <tr>
  <td><%= x[:person][:person_name][:firstname] %></td>
  <td><%= x[:person][:person_name][:lastname] %></td>
    <td><%= x[:updated_at] %></td>


    <td class="actions">
      <%= link_to("Show", patient_path(x[:person_id]), :class => 'action show') %>
     <%= link_to('Edit', edit_patient_path(x[:person_id])) %>
      <%= link_to("Delete", '#', :class => 'action delete') %>
    </td>
  </tr>
  <% end %>
</table>
